// FONTS
{{ settings.font_heading | font_face }};
{{ settings.font_body | font_face }};

@font-face {
    font-family: "Josefin Sans";
    font-weight: 400, 700;
    font-style: normal;
    src: url("https://fonts.shopifycdn.com/josefin_sans") format("woff2"),
         url("https://fonts.shopifycdn.com/josefin_sans/") format("woff");
}



// VARIABLES
$primary: #0C0A0A;
$secondary: #D25100;
$accent1: #FFE2DF;
$accent2: #FBE8B1;
$accent3: #F4BD03;



// RESETS 

ul,
h1,
h2,
h3,
h4,
p {
  margin: 0;
  padding: 0;
}

.wrapper {
    max-width: 1200px;
    width: 90%;
    margin: 0 auto;
}



// MAIN STYLES

body {
    background-color: {{ settings.color_main_bg }};
    font-family: {{settings.font_body.family}};
}


h1, h2 {
    text-align: center;
    letter-spacing: 9px;
    text-transform: uppercase;
}

.breadcrumb {
    margin: 20px 0px;
    a {
        text-transform: capitalize;
        color: $primary;
    }
}

// REPEATED STYLES

a {
    text-decoration: none;
    text-transform: uppercase;
}

a:hover {
    color: {{ settings.hover_color }};
}

.home-collection, .image-with-text {
    display: flex;
}

.btn {
    background-color: $secondary;
    padding: 5px 9px;
    color: white;
    margin-top: 8px;
    box-shadow: 3px 3px 0px 0px white;
}

header.btn {
    background-color: white;
    color: $primary;
    box-shadow: 3px 3px 0px 0px $secondary;
}



// HEADER 

header {
    display: flex;
    justify-content: space-between;
    align-items: center;

    padding: 10px 0px;
}

nav ul {
    display: flex;
    padding: 10px 0px 10px 10px;
    li {
        list-style: none;
        a {
            color: $primary;
            padding-left: 25px;
            
        }
    }
}


// HOME PAGE //
// FEATURED COLLECTION STYLES
.featured-collection {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.container {
    position: relative;
}

.bkgrd-left, .bkgrd-right {
    width: 50%;
    height: 100%;
    position: absolute;
    z-index: -1;
}

.bkgrd-left {
    background-color: $accent1;
}

.bkgrd-right {
    background-color: $accent2;
    right: 0;
}

.collection-info {
    background-repeat: no-repeat;background-position: center; 
    background-size: 350px;
    height: 450px;

    text-align: center;
}

.collection-info-text {
    position: relative;
    top: 75%;
    h2 {
        margin-bottom: 15px;
    }
}

.featured-collection, .home-collection {
    margin-bottom: 20px;
}



// HOME COLLECTIONS
.home-collection-container {
    display: flex;
    margin-bottom: 20px;
}

.home-collection-1, .home-collection-2 {
    background-repeat: no-repeat;
    background-position: center; 
    width: 510px;
    height: 350px;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.home-collection-1 h2, .home-collection-2 h2 {
    width: 50%;
}

.home-collection-1 {
    margin-right: 10px;
}

.home-collection-2 {
    margin-left: 10px;
}



// IMAGE WITH TEXT 
.about-us {
    background-color: $accent1;
    margin-bottom: 20px;
    display: flex;
}

.about-us-image, .about-us-text {
    margin: 20px;
}

.about-us-image img {
    width: 365px;
}

.about-us-text, .about-us-text h2 {
    text-align: left;
}

.about-us-text h2 {
    font-size: 18px;
}

.about-us-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
}



// SHOP PRODUCTS PAGE

.collections.container, .contact.container, .cart.container {
    height: 250px;
}

.title {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    h1 {
        text-transform: uppercase;
    }
}

.collections-container {
    display: flex;
}

.product-container {
    height: 100%;
    width: 100%;
}



// CONTACT PAGE
.contact-section {
    margin: 60px;
}

.contact-section, .contact-form {
    display: flex;
}

.contact-form {
    flex-direction: column;
    width: 40%;
    margin: 0% 5%;
}

input[type=text], input[type=email], input[type=tel]  {
    border: none;
    border-bottom: 2px solid $accent3;
    margin-bottom: 20px;
}

.contact-form textarea {
    border: 2px solid $accent3;
    resize: none;
}

.text-label {
    margin-bottom: 10px;
}

input[type=submit] {
    width: 30%;
    text-transform: uppercase;
}


// CART
.cart {
    display: flex;
    justify-content: space-between;
    margin: 60px 0px;
}

.col-names > th {
    text-align: left;
}

.cart td, .cart a {
    color: $primary;
}

th, td {
    padding: 0px 15px 15px 15px;
}

.prod-img {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.prod-img a {
    padding: 0px;
}

.remove {
    text-transform: lowercase;
    border: 1px solid $primary;
    padding: 1px 5px;
    color: $primary;
    &:hover {
        transition: .2s;
        color: $secondary;
    }
}

.total {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 50px;
}

.total-btns {

}


// FOOTER
footer {
    background-color: {{ settings.color_footer_bg }};
    text-align: center;
    padding: 30px;
    img {
        width: 20%;
    }
    p {
        text-transform: uppercase;
        font-size: 12px;
    }
    .fab {
        font-size: 30px;
        padding: 10px;
        color: $secondary;
    }
}