// FONTS
{{ settings.font_heading | font_face }};
{{ settings.font_body | font_face }};

@font-face {
    font-family: "Josefin Sans";
    font-weight: 400, 700;
    font-style: normal;
    src: url("https://fonts.shopifycdn.com/josefin_sans") format("woff2"),
         url("https://fonts.shopifycdn.com/josefin_sans/") format("woff");
}



// VARIABLES
$primary: #0C0A0A;
$secondary: #D25100;
$accent1: #FFE2DF;
$accent2: #FBE8B1;
$accent3: #F4BD03;



// RESETS 

ul,
h1,
h2,
h3,
h4,
p {
  margin: 0;
  padding: 0;
}

img {
    width: 100%;
    display: block;
}

.wrapper {
    max-width: 1200px;
    width: 90%;
    margin: 0 auto;
}



// MAIN STYLES

body {
    background-color: {{ settings.color_main_bg }};
    font-family: {{settings.font_body.family}};
}


h1, h2 {
    text-align: center;
    letter-spacing: 9px;
    text-transform: uppercase;
}

.breadcrumb {
    margin: 20px 0px;
    a {
        text-transform: capitalize;
        color: $primary;
    }
}

// REPEATED STYLES

a {
    text-decoration: none;
    text-transform: uppercase;
}

a:hover {
    background-color: #d25100c7;
    transition: .3s;
}

.home-collection, .image-with-text {
    display: flex;
}

.btn {
    background-color: $secondary;
    padding: 14px;
    color: white;
    margin-top: 8px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
}



// HEADER 

header {
    display: flex;
    justify-content: space-between;
    align-items: center;

    padding: 10px 0px;
}

header nav ul {
    display: flex;
    padding: 10px 0px 10px 10px;
    li {
        list-style: none;
        a {
            color: $primary;
            padding-left: 25px;
        }

        &:hover {
            font-weight: bold;
            transition: .3s;
        }
    }
}

header.btn {
    background-color: white;
    color: $primary;
    box-shadow: 3px 3px 0px 0px $secondary;
}

.fa-shopping-bag {
    padding-right: 4px;
}


// HOME PAGE //
// FEATURED COLLECTION STYLES
.featured-collection {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.container {
    position: relative;
}

.bkgrd-left, .bkgrd-right {
    width: 50%;
    height: 100%;
    position: absolute;
    z-index: -1;
}

.bkgrd-left {
    background-color: $accent1;
}

.bkgrd-right {
    background-color: $accent2;
    right: 0;
}

.collection-info {
    background-repeat: no-repeat;background-position: center; 
    background-size: 350px;
    height: 450px;

    text-align: center;
}

.collection-info-text {
    position: relative;
    top: 75%;
    h2 {
        margin-bottom: 15px;
    }
}

.featured-collection, .home-collection {
    margin-bottom: 20px;
}



// HOME COLLECTIONS
.home-collection-container {
    display: flex;
    margin-bottom: 20px;
}

.home-collection-1, .home-collection-2 {
    background-repeat: no-repeat;
    background-position: center; 
    width: 50%;
    height: 350px;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.home-collection-1 h2, .home-collection-2 h2 {
    width: 50%;
}

.home-collection-1 {
    margin-right: 10px;
}

.home-collection-2 {
    margin-left: 10px;
}



// IMAGE WITH TEXT 
.about-us {
    background-color: $accent1;
    margin-bottom: 20px;
    display: flex;
}

.about-us-image, .about-us-text {
    margin: 20px;
}

.about-us-image img {
    width: 365px;
}

.about-us-text, .about-us-text h2 {
    text-align: left;
}

.about-us-text h2 {
    font-size: 18px;
}

.about-us-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
}



// SHOP PRODUCTS PAGE
.collections.container, .contact.container, .cart.container {
    height: 250px;
}

.title {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    h1 {
        text-transform: uppercase;
    }
}

.collections-title {
    margin-bottom: 45px;
}

.collections-container {
    display: flex;
}

.color-filter {
    width: 15%;
}

.color-filter li {
    list-style: none;
    a {
        color: $primary;
    }
}

.color-filter h3 {
    width: 50%;
    margin-bottom: 10px;
}

.product-collection {
    width: 85%;
}

.product-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.single-info {
    margin: 20px;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    h3 {
        font-weight: 400;
        margin-top: 20px;
    }
    p {
        color: $secondary;
    }
}

.sort-by {
    margin-bottom: 25px;
}

.sort-by select {
    border: none;
    background: $accent3;
    padding: 8px 12px;
}

.page-counter {
    text-align: center;
    margin: 30px;
    span {
        background-color: $primary;
        padding: 4px 8px;
        cursor: pointer;
    }
    
    span, span a {
        color: $accent2;
    }
}

.page-counter span:hover, .page-counter span a:hover {
    background-color: $accent3;
    color: $primary;
    transition: .3s;
}


// SINGLE PRODUCT PAGE
.prod-container.wrapper {
    width: 60%;
    margin: 80px auto;
}

.prod-container {
    display: flex;
    justify-content: space-between;
}

.prod-info  {
    margin-left: 100px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    h1 {
        color: $secondary;
        text-align: left;
    }
    p {
        font-size: 35px;
        padding: 20px 0px;
    }
}

.prod-info input[type=number] {
    border: none;
    background-color: gold;
    padding: 5px;
    text-align: center;
    font-size: 14px;
    margin-left: 10px;
}

.prod-info form label, .prod-info form button {
    text-transform: uppercase;
}

.prod-info form .btn {
    padding: 8px 14px;
    box-shadow: 3px 3px 0px 0px $accent3;
    font-size: 14px;
    display: block;
    margin-top: 40px;
    &:hover {
        color: $primary;
        transition: .3s;
    }
}

.related-prod figure {
    display: inline-block;
    h3 {
        color: $primary;
        padding-bottom: 15px;
    }
    h4 {
        color: $secondary;
        font-weight: 400;
    }
}

.related-prod {
    text-align: center;
    margin: 50px auto;
    h2 {
        margin-bottom: 45px;
    }
}



// CONTACT PAGE
.contact-section {
    margin: 60px;
}

.contact-section, .contact-form {
    display: flex;
}

.contact-form {
    flex-direction: column;
    width: 40%;
    margin: 0% 5%;
}

input[type=text], input[type=email], input[type=tel]  {
    border: none;
    border-bottom: 2px solid $accent3;
    margin-bottom: 20px;
}

.contact-form textarea {
    border: 2px solid $accent3;
    resize: none;
}

.text-label {
    margin-bottom: 10px;
}

input[type=submit] {
    width: 30%;
    text-transform: uppercase;
}


// CART
.cart {
    display: flex;
    flex-direction: column;
    margin: 60px 0px;
}

table {
    width: 100%;
}

.col-names th, .cart-items td {
    text-align: left;
}

.cart td, .cart a {
    color: $primary;
}

th, td {
    padding: 0px 15px 15px 15px;
}

.cart-img {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cart-img a {
    padding: 0px;
}

input[type=number] {
    min-width: 15%;
    max-width: 15%;
}

.remove {
    text-transform: lowercase;
    border: 1px solid $primary;
    padding: 1px 5px;
    color: $primary;
    &:hover {
        transition: .2s;
        background-color: $secondary;
    }
}

.total {
    display: flex;
    flex-direction: column;
    padding: 30px 0px;
    p {
        text-transform: uppercase;
    }
}

.total-btns {
    margin-top: 15px;
    button {
        background-color: $accent2;
        border: none;
        padding: 5px 10px;
        text-transform: uppercase;
        margin: 5px;
        &:hover {
            border: 1px solid $primary;
            transition: .2s;
        }
    }
}


// FOOTER
footer {
    background-color: {{ settings.color_footer_bg }};
    text-align: center;
    padding: 30px;
    img {
        width: 20%;
    }
    p {
        text-transform: uppercase;
        font-size: 12px;
    }
    .fab {
        font-size: 30px;
        padding: 10px;
        color: $secondary;
    }
}