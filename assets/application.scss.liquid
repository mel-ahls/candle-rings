@font-face {
    font-family: "Josefin Sans";
    font-weight: 400, 700;
    font-style: normal;
    src: url("https://fonts.shopifycdn.com/josefin_sans") format("woff2"),
         url("https://fonts.shopifycdn.com/josefin_sans/") format("woff");
}



// VARIABLES
$primary: #0C0A0A;
$secondary: #D25100;
$accent1: #FFE2DF;
$accent2: #FBE8B1;
$accent3: #F4BD03;



// RESETS 

ul,
h1,
h2,
h3,
h4,
p {
  margin: 0;
  padding: 0;
}

img {
    width: 100%;
    min-width: 50px;
    display: block;
}

.wrapper {
    max-width: 1200px;
    width: 90%;
    margin: 0 auto;
}



// MAIN STYLES

body {
    background-color: {{ settings.color_main_bg }};
    font-family: {{settings.font_body.family}};
}


h1, h2 {
    text-align: center;
    letter-spacing: 9px;
    text-transform: uppercase;
}

.breadcrumb {
    margin: 20px 0px;
    a {
        text-transform: capitalize;
        color: $primary;
    }
}

// REPEATED STYLES

a {
    text-decoration: none;
    text-transform: uppercase;
}

nav a:hover {
    transition: .3s;
}

.home-collection, .image-with-text {
    display: flex;
}

.btn {
    background-color: $secondary;
    padding: 11px 14px;
    color: white;
    margin-top: 8px;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    &:hover {
        background-color: #d25100b3;
        transition: .4s;
    }
}



// HEADER 

header {
    display: flex;
    justify-content: space-between;
    align-items: end;

    padding: 10px 0px;
}

header nav ul {
    display: flex;
    li {
        list-style: none;
        a {
            color: $primary;
            padding-left: 25px;
        }

        &:hover {
            font-weight: bold;
            transition: .3s;
        }
    }
}

header.btn {
    background-color: white;
    color: $primary;
    box-shadow: 3px 3px 0px 0px $secondary;
}

.fa-shopping-bag {
    padding-right: 4px;
}

.mobile-cart, .burg {
    display: none;
}


// HOME PAGE //
// FEATURED COLLECTION STYLES
.featured-collection {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.container {
    position: relative;
}

.bkgrd-left, .bkgrd-right {
    width: 50%;
    height: 100%;
    position: absolute;
    z-index: -1;
}

.bkgrd-left {
    background-color: $accent1;
}

.bkgrd-right {
    background-color: $accent2;
    right: 0;
}

.collection-info {
    background-repeat: no-repeat;background-position: center; 
    background-size: 350px;
    height: 450px;

    text-align: center;
}

.collection-info-text {
    position: relative;
    top: 75%;
    h2 {
        margin-bottom: 15px;
    }
}

.featured-collection, .home-collection {
    margin-bottom: 20px;
}



// HOME COLLECTIONS
.home-collection-container {
    display: flex;
    margin-bottom: 20px;
}

.home-collection-1, .home-collection-2 {
    background-repeat: no-repeat;
    background-position: center; 
    width: 50%;
    height: 350px;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    h2 {
        min-width: 90%;
        max-width: 50%; 
    }
}


.home-collection-1 {
    margin-right: 10px;
}

.home-collection-2 {
    margin-left: 10px;
}



// IMAGE WITH TEXT 
.about-us {
    background-color: $accent1;
    margin-bottom: 20px;
    display: flex;
}

.about-us-image, .about-us-text {
    margin: 20px;
}

.about-us-image img {
    width: 365px;
}

.about-us-text, .about-us-text h2 {
    text-align: left;
}

.about-us-text h2 {
    font-size: 18px;
}

.about-us-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
}



// SHOP PRODUCTS PAGE

.title {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50px 0;
    h1 {
        text-transform: uppercase;
    }
}

.collections-title {
    margin-bottom: 45px;
}

.collections-container {
    display: flex;
}

.color-filter {
    width: 12%;
    height: 15%;
    margin-right: 3%;
    border-right: 2px solid $accent3;
    ul {
        padding-right: 10px;
    }
}

.color-filter li {
    list-style: none;
    a {
        color: $primary;
    }
}

.color-filter h3 {
    margin-bottom: 10px;
}

.product-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.single-info {
    text-align: center;
    width: 30%;
    margin: 20px 8px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    h3 {
        font-weight: 400;
        margin-top: 20px;
    }
    p {
        color: $secondary;
    }
}

.sort-by select {
    border: none;
    background: $accent2;
    padding: 8px 12px;
    border-radius: 4px;
    display: inline-block;

    text-indent: 1px;
    text-overflow: '';
    -moz-appearance: none;

    // background-image:
    // linear-gradient(45deg, transparent 50%, $primary 50%),
    // linear-gradient(135deg, $primary 50%, transparent 50%),
    // linear-gradient(to right, #ccc, #ccc);
    // background-position:
    // calc(100% - 20px) calc(1em + 2px),
    // calc(100% - 15px) calc(1em + 2px),
    // calc(100% - 2.5em) 0.5em;
    // background-size:
    // 5px 5px,
    // 5px 5px,
    // 0 1.5em;
    // background-repeat: no-repeat;
}
// select credit: https://codepen.io/vkjgr/pen/VYMeXp


.page-counter {
    text-align: center;
    margin: 30px;
    span {
        background-color: $accent2;
        padding: 4px 8px;
        cursor: pointer;
    }
    
    span, span a {
        color: $primary;
    }
}

.page-counter span:hover, .page-counter span a:hover {
    background-color: $accent3;
    color: $primary;
    transition: .3s;
}


// SINGLE PRODUCT PAGE
.prod-container.wrapper {
    width: 60%;
    margin: 80px auto;
}

.prod-container {
    display: flex;
    justify-content: space-between;
}

.prod-info  {
    margin-left: 100px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    h1 {
        color: $secondary;
        text-align: left;
    }
    p {
        font-size: 35px;
        padding: 20px 0px;
    }
}

.prod-info input[type=number] {
    border: none;
    background-color: $accent2;
    padding: 5px;
    text-align: center;
    font-size: 14px;
    margin-left: 10px;
}

.prod-info form label, .prod-info form button {
    text-transform: uppercase;
}

.prod-info form .btn {
    padding: 8px 14px;
    box-shadow: 3px 3px 0px 0px $accent3;
    font-size: 14px;
    display: block;
    margin-top: 40px;
    &:hover {
        color: $primary;
        transition: .3s;
    }
}

.prod-info form select {
    display: none;
}

.related-prod figure {
    display: inline-block;
    h3 {
        color: $primary;
        padding-top: 22px;
        padding-bottom: 15px;
    }
    h4 {
        color: $secondary;
        font-weight: 400;
    }
}

.related-prod {
    text-align: center;
    margin: 50px auto;
    h2 {
        margin-bottom: 45px;
    }
}



// CONTACT PAGE
.contact-section {
    padding: 60px 0;
}

.contact-section, .contact-form {
    display: flex;
}

.contact-form {
    flex-direction: column;
    justify-content: center;
    width: 40%;
    margin: 0% 5%;
}

input[type=text], input[type=email], input[type=tel]  {
    border: none;
    border-bottom: 2px solid $accent3;
    margin-bottom: 20px;
}

.contact-form textarea {
    border: 2px solid $accent3;
    resize: none;
}

.text-label {
    margin-bottom: 10px;
}

input[type=submit] {
    text-transform: uppercase;
}

.form-map iframe {
    max-width: 100%;
}


// CART
.cart {
    display: flex;
    flex-direction: column;
    margin: 60px 0px;
    h1 {
        margin-top: 30px;
    }
}

table {
    width: 100%;
}

.col-names th, .cart-items td {
    text-align: left;
    // width: 100px;
}

.resize {
    width: 90px;
}

.cart td, .cart a {
    color: $primary;
}

.cart-img {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cart-img a {
    padding: 0px;
}

input[type=number] {
    min-width: 30px;
    max-width: 30px;
}

.remove {
    text-transform: lowercase;
    border: 1px solid $primary;
    padding: 1px 5px;
    color: $primary;
    &:hover {
        transition: .2s;
        background-color: $secondary;
    }
}

.total {
    display: flex;
    flex-direction: column;
    padding: 30px 0px;
    p {
        text-transform: uppercase;
    }
}

.total-btns {
    margin-top: 15px;
    button {
        background-color: $secondary;
        color: white;
        border: none;
        padding: 8px 12px;
        text-transform: uppercase;
        margin: 5px;
        &:hover {
            background-color: #d25100b3;
            transition: .3s;
        }
    }
}


// FOOTER
footer {
    background-color: {{ settings.color_footer_bg }};
    text-align: center;
    padding: 30px;
    img {
        width: 20%;
    }
    p {
        text-transform: uppercase;
        font-size: 12px;
    }
    .fab {
        font-size: 30px;
        padding: 10px;
        color: $secondary;
    }
}

.footer-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    img {
        margin-bottom: 15px;
    }
}




// MEDIA QUERIES
// HEADER NAV
/* Portrait tablet and small desktops */
@media (max-width: 940px) {
    .contact-section {
        flex-direction: column;
        align-items: center;
    }

    .contact-form {
        width: 70%;
        margin-bottom: 25px;
        .btn {
            margin: 5px auto;

        }
    }

    .about-us-image img {
        width: 250px;
    }
}



/* Landscape phone to portrait tablet */
@media (max-width: 768px) {
    .desktop-cart {
        display: none;
    }

    .mobile-cart, .burg {
        display: inline-block;
    }

    header nav ul {
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        background: white;
        padding: 35px;

        z-index: 1;
        position: absolute;
        right: 0;
        top: 68px;
        height: 50%;
        width: 90%;
        li {
            padding: 35px 0px;
            font-size: 30px;

            a {
                padding-left: 0px;
            }
        }
    }

    .burg {
        font-size: 24px;
        margin-left: 10px;
    }

    .mobile-cart a {
        color: $primary;
    }

    .clicked {
        display: flex;
    }

    // HOME PAGE COLLECTIONS 

    .home-collection-container {
        flex-direction: column;
    }

    .home-collection-1, .home-collection-2 {
        width: 100%;
        height: 250px;
    }

    .home-collection-1 {
        margin-bottom: 20px;
        margin-right: 0;
    }

    .home-collection-2 {
        margin-left: 0;
    }

    // HOME - ABOUT US SECTION
    .about-us {
        flex-direction: column;
    }

    .about-us-image img {
        width: 100%;
    }

    // SHOP PRODUCTS PAGE
    collections-container {
        flex-direction: column;
    }

    .color-filter {
        display: none;
    }

    // PRODUCT PAGE
    .prod-info {
        margin-left: 20px;;
    }

    // CART PAGE
    td, td a {
        font-size: 12px;
    }
}



/* Landscape phones and down */
@media (max-width: 480px) {
    .contact-form {
        width: 90%;
    }

    .mobile-cart {
        display: none;
    }

    .desktop-cart {
        display: flex;
    }

    .prod-container.wrapper {
        width: 100%;
    }
    
}