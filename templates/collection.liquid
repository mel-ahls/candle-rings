<div class="collections container wrapper">
  <div class="bkgrd-left"></div>
  <div class="bkgrd-right"></div>
  <div class="title">
    <h1>Candles</h1>
  </div>
</div>

<div class="collections-title wrapper">
  {% render 'breadcrumbs' %}
  <h1>{{ collection.title }}</h1>
</div>
  
<section class="collections-container wrapper">

  {% render 'color-filter' %}

  <div class="product-collection">
    <div class="sort">
      {% render 'sort-by' %}
    </div>
    <div class="product-page-container">
      {% paginate collection.products by 9 %}
      <div class="product-container">
        {% for product in collection.products %}
        <div class="single-info">
          <a href="{{ product.url | within: collection }}">
            <img src="{{ product.featured_image.src | img_url: 'medium' }}" alt="{{ product.featured_image.alt | escape }}">
          </a>
          {% unless product.available %}<br><strong>sold out</strong>{% endunless %}
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
        </div>
        {% else %}
      </div>

      <p>no matches</p>
      {% endfor %}
    </div>

    <div class="page-counter">
      {% if paginate.pages > 1 %}
        {{ paginate | default_pagination }}
      {% endif %}
      {% endpaginate %}
    </div>
  </div>

</section>