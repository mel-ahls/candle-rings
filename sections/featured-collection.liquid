{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available in the "Featured Collection" section in the theme editor.

  Theme Store required settings
  - Collection

{%- endcomment -%}
{%- assign collection = collections[section.settings.collection] -%}

<section class="featured-collection">
  <div class="container wrapper">
    <div class="bkgrd-left"></div>
    <div class="bkgrd-right"></div>
    <div class="collection-info" style="background-image: url({{collection.image |img_url: '1000x'}})">
      {% if section.settings.title != blank %}
        <h2 class="featured-collection__title">{{ section.settings.title | escape }}</h2>
      {% endif %}

      {% if section.settings.link != blank %}
      <a class="btn" href="{{section.settings.link}}">{{section.settings.link_text}}</a>
      {% endif %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Featured collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text"
      }

    ],
    "presets": [
      {
        "name": "Featured collection",
        "category": "Collection"
      }
    ]
  }
{% endschema %}
